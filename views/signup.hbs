<section class="hero is-primary is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <!--! (Line below) you can try different screen-size classes -->
        <div class="column is-5-tablet is-4-desktop is-3-widescreen">
          <h1 class="is-size-3 mb-2 has-text-weight-bold has-text-centered">
            Sign up
          </h1>
          <form class="box">
            <!--* Can add a logo here -->
            <!-- Email field -->
            <div class="field">
              <label class="label">Email</label>
              <div class="control has-icons-left">
                <input 
                  type="email" 
                  class="input" 
                  placeholder="bojo@gmail.com"
                />
                <span class="icon is-small is-left">
                  <i class="fa fa-envelope"></i>
                </span>
              </div>
            </div>
            <!-- Password field -->
            <div class="field">
              <label class="label">Password</label>
              <div class="control has-icons-left">
                <!-- TODO: form validation - make sure password is 8-character long -->
                <input 
                  type="password" 
                  class="input" 
                  placeholder="********"
                  required
                />
                <span class="icon is-small is-left">
                  <i class="fa fa-lock"></i>
                </span>
              </div>
              <span class="help">8 characters minimum</span>
            </div>
            <!-- TODO: signup submit button -->
          </form>
        </div>
      </div>
    </div>
  </div>
</section>